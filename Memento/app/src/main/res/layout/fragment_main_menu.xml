<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_menu_logo_imageview"
        android:layout_marginTop="@dimen/auth_icon_top_margin"
        android:layout_marginBottom="@dimen/main_menu_logo_margin_bottom"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/factions_circle"
        android:transitionName="@string/transitionLogo" />

    <Button
        android:id="@+id/main_menu_button_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign out"/>

</LinearLayout>