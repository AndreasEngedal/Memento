<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/auth_connected_logo_imageview"
        android:layout_marginTop="@dimen/auth_icon_top_margin"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/factions_circle"
        android:transitionName="@string/transitionLogo" />

    <com.engedaludvikling.memento.views.TitleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/auth_distance_between_logo_and_views"
        android:layout_below="@id/auth_connected_logo_imageview"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:text="You are connected!"/>

    <Button
        android:id="@+id/temp_log_out"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/auth_connected_logo_imageview"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Sign out"/>

</RelativeLayout>